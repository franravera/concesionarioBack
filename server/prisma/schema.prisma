generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Vehiculo {
  id          Int      @id @default(autoincrement())
  tipo        String   
  marca       String
  modelo      String
  year        Int
  descripcion String
  precio      Float
  transmision String?
  combustible String?
  kilometraje Int?    
  imagenes    Imagen[] 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Imagen {
  id          Int      @id @default(autoincrement())
  url         String
  vehiculoId  Int
  vehiculo    Vehiculo @relation(fields: [vehiculoId], references: [id])
}

model Usuario {
  id        Int      @id @default(autoincrement())
  email     String   @unique 
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}