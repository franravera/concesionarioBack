generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Aquí es donde defines tus modelos, por ejemplo, un modelo '
model Vehiculo {
  id          Int      @id @default(autoincrement())
  tipo        String   // Motocicleta, Automovil, Embarcacion, UTV
  marca       String
  modelo      String
  year        Int
  descripcion String
  precio      Float
  kilometraje Int?     // Nuevo campo que puede ser nulo
  imagenes    Imagen[] // Relación uno a muchos con el modelo Imagen
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Imagen {
  id          Int      @id @default(autoincrement())
  url         String
  vehiculoId  Int
  vehiculo    Vehiculo @relation(fields: [vehiculoId], references: [id])
}

model Usuario {
  id        Int      @id @default(autoincrement())
  email     String   @unique 
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}